<!DOCTYPE html>
<html dir="ltr" lang="en">

<%- include('../layout/headSection') %>

<body>
    <!-- Preloader -->
    <div class="preloader">
        <div class="lds-ripple">
            <div class="lds-pos"></div>
            <div class="lds-pos"></div>
        </div>
    </div>

    <div id="main-wrapper">
        <!-- Header -->
        <%- include("../layout/header") -%>

        <!-- Sidebar -->
        <%- include("../layout/sidebar") %>

        <div class="page-wrapper">
            <!-- Breadcrumb -->
            <div class="page-breadcrumb">
                <div class="row">
                    <div class="col-12 d-flex no-block align-items-center">
                        <h4 class="page-title"></h4>
                        <div class="ml-auto text-right">
                            <nav aria-label="breadcrumb">
                                <ol class="breadcrumb">
                                    <li class="breadcrumb-item"><a href="#">Home</a></li>
                                    <li class="breadcrumb-item active" aria-current="page">Library</li>
                                </ol>
                            </nav>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Container Fluid -->
            <div class="container-fluid">
                <div class="card shadow-sm rounded-lg">
                    <div class="card-body">
                        <h5 class="card-title m-b-0 text-center text-primary">Blog Table</h5>
                    </div>

                    <div class="table-responsive">
                        <table class="table table-striped table-hover">
                            <thead class="bg-primary text-white">
                                <tr>
                                    <th scope="col">NO.</th>
                                    <th scope="col">Title</th>
                                    <th scope="col">Category</th>
                                    <th scope="col">Author</th>
                                    <th scope="col">Content</th>
                                    <th scope="col">Date</th>
                                    <th scope="col">Description</th>
                                    <th scope="col">Image</th>
                                    <th scope="col">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                <% Blogs.forEach((ele, index) => { %>
                                    <tr>
                                        <th><%= index + 1 %></th>
                                        <td><%= ele.blog_title %></td>
                                        <td><%= ele.blog_category %></td>
                                        <td><%= ele.blog_author %></td>
                                        <td class="text-truncate" style="max-width: 150px;"><%= ele.blog_content %></td>
                                        <td><%= ele.blog_date %></td>
                                        <td class="text-truncate" style="max-width: 200px;"><%= ele.blog_desc %></td>
                                        <td><img src="/profile/<%= ele.blog_image %>" alt="Blog Image" class="img-fluid rounded" width="100" height="50"></td>
                                        <td>
                                            <div class="d-flex">
                                                <a href="/api/blog/<%= ele._id %>" class="btn btn-danger btn-sm">Delete</a>
                                                <a href="/updateBlog?id=<%= ele._id %>" class="btn btn-warning btn-sm mx-1">Update</a>
                                            </div>
                                        </td>
                                    </tr>
                                <% }) %>
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>

            <!-- Footer -->
            <footer class="footer text-center mt-4">
                All Rights Reserved by Matrix-admin. Designed and Developed by <a href="https://wrappixel.com">WrapPixel</a>.
            </footer>
        </div>
    </div>

    <%- include('../layout/jsLinks') %>

</body>

</html>
